<%- include("header") -%>

<div class="box" id="title">
  <h1><%=listTitle.toUpperCase() + " List"%></h1>
</div>



<div class="box">
  <% addItems.forEach(function(item){ %>
  <form class="" action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkBox" value="<%= item._id %>" onchange="this.form.submit()">
      <p class="listItem"><%= item.description %></p>
    </div>
    <input type="hidden" name="listName" value="<%= listTitle %>"></input>
  </form>
  <% }) %>



  <form class="userInput" action="/" method="post">
    <input type="text" name="addItem" placeholder="Item To Add" autocomplete="off">
    <button type="submit" name="listButton" value="<%= listTitle %>">+</button>
  </form>
</div>

<%- include("footer") -%>
